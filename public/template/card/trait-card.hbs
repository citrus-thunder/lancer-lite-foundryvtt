<div class="item-card trait-card" data-item-id="{{id}}">
	<div class="header">
		<div class="title-row">
			<span class="toggle-body">{{name}}</span>
			{{#unless hideButtons}}
			<div class="header-buttons">
				<i class="fa-regular fa-message item-post icon-button" title="Post Trait to Chat" data-item-id="{{id}}"></i>
				<i class="fa-solid fa-pen-to-square item-edit icon-button" title="Edit Trait" data-item-id="{{id}}"></i>
			</div>
			{{/unless}}
		</div>
	</div>
	<div class="body">
		{{#if system.description}}
		<div class="description {{#unless hideDescription}}--show{{/unless}}">
			{{{system.description}}}
		</div>
		{{/if}}
	</div>
</div>