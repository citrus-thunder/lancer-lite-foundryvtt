<div class="item-card core-bonus-card" data-item-id="{{id}}">
	<div class="header">
		<div class="title-row">
			<span class="toggle-body">{{name}}</span>
			{{#unless hideButtons}}
			<div class="header-buttons">
				<i class="fa-regular fa-message item-post icon-button" title="Post Core Bonus to Chat" data-item-id="{{id}}"></i>
				<i class="fa-solid fa-pen-to-square item-edit icon-button" title="Edit Core Bonus" data-item-id="{{id}}"></i>
			</div>
			{{/unless}}
		</div>
		{{#if tags}}
		<div class="tags">
		</div>
		{{/if}}
	</div>
	<div class="body">
		<div class="description">
			{{{system.description}}}
		</div>
	</div>
</div>