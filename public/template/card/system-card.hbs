<div class="item-card system-card --{{system.type}}" data-item-id="{{id}}">
	<div class="header">
		<div class="title-row">
			<span class="toggle-body">{{name}}</span>
			<div class="header-buttons">
				<i class="fa-solid fa-pen-to-square item-edit icon-button" title="Edit Weapon" data-item-id="{{id}}"></i>
			</div>
		</div>
		<div class="tags">
			{{#ifEquals system.type "action"}}
			{{system.sp_cost}} SP, Action{{#if system.tags}}, {{system.tags}}{{/if}}
			{{/ifEquals}}
			{{#ifEquals system.type "core"}}
			Core System{{#if system.tags}}, {{system.tags}}{{/if}}
			{{/ifEquals}}
			{{#ifEquals system.type "passive"}}
			{{system.sp_cost}} SP{{#if system.tags}}, {{system.tags}}{{/if}}
			{{/ifEquals}}
			{{#ifEquals system.type "protocol"}}
			{{system.sp_cost}} SP, Protocol{{#if system.tags}}, {{system.tags}}{{/if}}
			{{/ifEquals}}
			{{#ifEquals system.type "tech"}}
			{{system.sp_cost}} SP{{#if system.tags}}, {{system.tags}}{{/if}}
			{{/ifEquals}}
		</div>
	</div>
	<div class="body">
		{{#ifEquals system.type "core"}}
		{{#if system.description}}
		<div class="description --show">
			{{{system.description}}}
		</div>
		{{/if}}
		{{/ifEquals}}
		{{#ifNotEquals system.type "core"}}
		{{#if system.description}}
		<div class="description">
			{{{system.description}}}
		</div>
		{{/if}}
		{{/ifNotEquals}}
	</div>
</div>