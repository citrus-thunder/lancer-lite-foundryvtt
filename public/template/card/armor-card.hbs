<div class="item-card armor-card" data-item-id="{{id}}">
	<div class="header">
		<div class="title-row">
			<span class="toggle-body">{{name}}</span>
			{{#unless hideButtons}}
			<div class="header-buttons">
				<i class="fa-regular fa-message item-post icon-button" title="Post Armor to Chat" data-item-id="{{id}}"></i>
				<i class="fa-solid fa-pen-to-square item-edit icon-button" title="Edit Armor" data-item-id="{{id}}"></i>
			</div>
			{{/unless}}
		</div>
		{{#if system.tags}}
		<div class="tags">
			{{system.tags}}
		</div>
		{{/if}}
		{{#if system.bonuses}}
		<div class="bonuses traits">
			Bonuses: {{system.bonuses}}
		</div>
		{{/if}}
		<div class="stats traits">
			<table>
				<tr class="table-header">
					<td>Armor</td>
					<td>Evasion</td>
					<td>E-Defense</td>
					<td>Speed</td>
				</tr>
				<tr class="table-body">
					<td>{{system.armor}}</td>
					<td>{{system.evasion}}</td>
					<td>{{system.e_defense}}</td>
					<td>{{system.speed}}</td>
				</tr>
			</table>
		</div>
	</div>
	<div class="body">
		<div class="description">
			{{{system.description}}}
		</div>
	</div>
</div>