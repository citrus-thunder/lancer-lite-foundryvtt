<div class="{{cssClass}} flexcol item-sheet-container">
	<form autocomplete="off">
		<header class="sheet-header">
			<h1>ACTION</h1>
			<div class="icon-button-container">
				<i class="fa-solid fa-ban item-delete icon-button" title="Delete Action" data-item-id="{{id}}"></i>
			</div>
		</header>
		<div class="flexcol">
			<!-- Row 1 -->
			<div class="flexrow">
				<!-- Portrait -->
				<div class="flexcol flex0 pad-right">
					<div class="portrait-frame --square">
						<img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64" />
					</div>
				</div>
				<div class="flexcol field-group no-grow">
					<!-- Name -->
					<div class="field">
						<label>
							NAME
							<input type="text" name="name" value="{{item.name}}">
						</label>
					</div>
					<div class="field">
						<label>
							TYPE
							<select name="system.type">
								{{#select item.system.type}}
								<option value="action">Action</option>
								<option value="tech_action">Tech Action</option>
								<option value="reaction">Reaction</option>
								<option value="protocol">Protocol</option>
								{{/select}}
							</select>
						</label>
					</div>
					<div class="field">
						<label>
							SP COST
							<input type="text" name="system.coset" value="{{item.system.cost}}" data-dType="Number">
						</label>
					</div>
					<div class="field">
						<label>
							TAGS
							<input type="text" name="system.tags" value="{{item.system.tags}}">
						</label>
					</div>
				</div>
			</div>
			<!-- Row 2: Description -->
			<div class="flexrow">
				<!-- Description -->
				<div class="field description">
					<label>
						DESCRIPTION
						{{editor item.system.description target="system.description" button=true}}
					</label>
				</div>
			</div>
		</div>
	</form>
</div>