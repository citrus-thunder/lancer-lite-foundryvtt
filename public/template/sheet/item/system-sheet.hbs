<div class="{{cssClass}} flexcol sheet-container item-sheet system-sheet">
	<form autocomplete="off">
		<header class="sheet-header">
			<h1>SYSTEM</h1>
			<div class="icon-button-container">
				<i class="fa-solid fa-ban item-delete icon-button" title="Delete System" data-item-id="{{id}}"></i>
			</div>
		</header>
		<div class="flexcol">
			<!-- Row 1 -->
			<div class="flexrow">
				<!-- Portrait -->
				<div class="flexcol flex0 pad-right">
					<div class="portrait-frame --square">
						<img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64" />
					</div>
				</div>
				<div class="flexcol field-group">
					<!-- Name / Type-->
					<div class="flexrow field-group">
						<div class="field">
							<label>
								NAME
								<input type="text" name="name" value="{{item.name}}">
							</label>
						</div>
						<div class="field">
							<label>
								TYPE
								<select name="system.type">
									{{#select item.system.type}}
									<option value="action">Action</option>
									<option value="core">Core</option>
									<option value="passive">Passive</option>
									<option value="protocol">Protocol</option>
									<option value="tech">Tech Action</option>
									{{/select}}
								</select>
							</label>
						</div>
						<div class="flexrow field-group">
							<div class="field">
								SP COST
								<input type="text" name="system.sp_cost" value="{{item.system.sp_cost}}" data-dType="Number">
							</div>
						</div>
					</div>
					<div class="fieldrow">
						<div class="field">
							<label>
								TAGS
								<input type="text" name="system.tags" value="{{item.system.tags}}">
							</label>
						</div>
					</div>
				</div>
			</div>
			<!-- Row 2: Description -->
			<div class="flexrow">
				<!-- Description -->
				<div class="field description">
					<label>
						DESCRIPTION
						{{editor item.system.description target="system.description" button=true}}
					</label>
				</div>
			</div>
		</div>
	</form>
</div>