<div class="{{cssClass}} flexcol sheet-container item-sheet system-sheet">
	<form autocomplete="off">
		<header class="sheet-header">
			<h1>SYSTEM</h1>
			<div class="icon-button-container">
				<i class="fa-solid fa-ban item-delete icon-button" title="Delete System" data-item-id="{{id}}"></i>
			</div>
		</header>
		<div class="flexcol">
			<!-- Row 1 -->
			<div class="flexrow">
				<!-- Portrait -->
				<div class="flexcol flex0 pad-right">
					<div class="portrait-frame --square">
						<img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64" />
					</div>
				</div>
				<div class="flexcol field-group">
					<!-- Row: Name -->
					<div class="flexrow field-group">
						<div class="field">
							<label>
								NAME
								<input type="text" name="name" value="{{item.name}}">
							</label>
						</div>
					</div>
					<!-- Row: Type / SP Cost -->
					<div class="flexrow">
						<div class="field">
							<label>
								TYPE
								<select name="system.type">
									{{#select item.system.type}}
									<option value="action">Action</option>
									<option value="core">Core</option>
									<option value="passive">Passive</option>
									<option value="protocol">Protocol</option>
									<option value="tech">Tech Action</option>
									{{/select}}
								</select>
							</label>
						</div>
						<div class="field">
							<label>
								SP COST
								<input type="text" name="system.sp_cost" value="{{item.system.sp_cost}}" data-dType="Number">
							</label>
						</div>
						<div class="field">
							<label>
								DESTROYED
							</label>
							<div class="input-container">
								<input type="checkbox" name="system.destroyed" {{checked item.system.destroyed}}>
							</div>
						</div>
					</div>
					<!-- Row: Limit -->
					<div class="flexrow">
						<div class="field no-grow pad-right --more">
							<label>LIMITED</label>
							<div class="input-container">
								<input type="checkbox" name="system.limited.isLimited" {{checked item.system.limited.isLimited}}>
							</div>
						</div>
						{{#if item.system.limited.isLimited}}
						<div class="field">
							<label>LIMIT</label>
							<div class="flexrow input-container">
								<input type="text" class="--small" name="system.limited.value" value="{{item.system.limited.value}}"
									data-dType="Number">
								&nbsp;/&nbsp;
								<input type="text" class="--small" name="system.limited.max" value="{{item.system.limited.max}}"
									data-dType="Number">
							</div>
						</div>
						{{/if}}
					</div>
					<!-- Row: Tags -->
					<div class="flexrow">
						<div class="field">
							<label>
								TAGS
								<input type="text" name="system.tags" value="{{item.system.tags}}">
							</label>
						</div>
					</div>
				</div>
			</div>
			<!-- Row 2: Description -->
			<div class="flexrow">
				<!-- Description -->
				<div class="field description">
					<label>DESCRIPTION</label>
					{{editor item.system.description target="system.description" button=true}}
				</div>
			</div>
		</div>
	</form>
</div>