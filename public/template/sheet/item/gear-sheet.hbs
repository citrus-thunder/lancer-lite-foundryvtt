<div class="{{cssClass}} flexcol sheet-container item-sheet gear-sheet">
	<form autocomplete="off">
		<header class="sheet-header">
			<h1>GEAR</h1>
			<div class="icon-button-container">
				<i class="fa-solid fa-ban item-delete icon-button" title="Delete Gear" data-item-id="{{id}}"></i>
			</div>
		</header>
		<div class="flexcol">
			<!-- Row 1 -->
			<div class="flexrow">
				<!-- Portrait -->
				<div class="flexcol flex0 pad-right">
					<div class="portrait-frame --square">
						<img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64" />
					</div>
				</div>
				<div class="flexcol field-grup">
					<!-- Name -->
					<div class="flexrow">
						<div class="field">
							<label>
								NAME
								<input type="text" name="name" value="{{item.name}}">
							</label>
						</div>
					</div>
					<!-- Limited -->
					<div class="flexrow">
						<div class="field no-grow pad-right --more">
							<label>LIMITED</label>
							<div class="input-container">
								<input type="checkbox" name="system.limited.isLimited" {{checked item.system.limited.isLimited}}>
							</div>
						</div>
						{{#if item.system.limited.isLimited}}
						<div class="field">
							<label>LIMIT</label>
							<div class="flexrow input-container">
								<input type="text" class="--small" name="system.limited.value" value="{{item.system.limited.value}}"
									data-dType="Number">
								&nbsp;/&nbsp;
								<input type="text" class="--small" name="system.limited.max" value="{{item.system.limited.max}}"
									data-dType="Number">
							</div>
						</div>
						{{/if}}
					</div>
					<!-- Tags -->
					<div class="flexrow">
						<div class="field">
							<label>
								TAGS
								<input type="text" name="system.tags" value="{{item.system.tags}}">
							</label>
						</div>
					</div>
				</div>
			</div>
			<!-- Row 2: Description -->
			<div class="flexrow">
				<!-- Description -->
				<div class="field description">
					<label>DESCRIPTION</label>
					{{editor item.system.description target="system.description" button=true}}
				</div>
			</div>
		</div>
	</form>
</div>