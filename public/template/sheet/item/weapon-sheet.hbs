<div class="{{cssClass}} flexcol sheet-container item-sheet weapon-sheet">
	<form autocomplete="off">
		<header class="sheet-header">
			<h1>WEAPON</h1>
			<div class="icon-button-container">
				<i class="fa-solid fa-ban item-delete icon-button" title="Delete Weapon" data-item-id="{{id}}"></i>
			</div>
		</header>
		<div class="flexcol">
			<!-- Row 1 -->
			<div class="flexrow">
				<!-- Portrait -->
				<div class="flexcol flex0 pad-right">
					<div class="portrait-frame --square">
						<img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64" />
					</div>
				</div>
				<div class="flexcol field-group">
					<!-- Name -->
					<div class="field">
						<label>
							NAME
							<input type="text" name="name" value="{{item.name}}">
						</label>
					</div>
					<!-- Damage -->
					<div class="flexrow field-group">
						<div class="field">
							<label>
								DAMAGE
								<input type="text" name="system.damage" value="{{item.system.damage}}">
							</label>
						</div>
						<div class="field">
							<label>
								ROLL FORMULA
								<input type="text" name="system.roll_formula" value="{{item.system.roll_formula}}">
							</label>
						</div>
					</div>
					<!-- Range -->
					<div class="flexrow field-group">
						<div class="field">
							<label>
								RANGE
								<input type="text" name="system.range" value="{{item.system.range}}">
							</label>
						</div>
						<div class="field">
							<label>
								THREAT
								<input type="text" name="system.threat" value="{{item.system.threat}}" data-dtype="Number">
							</label>
						</div>
					</div>
					<!-- Size, Type, Destroyed -->
					<div class="flexrow">
						<div class="field">
							<label>
								SIZE
								<select name="system.size">
									{{#select item.system.size}}
									<option value="Pilot">Pilot</option>
									<option value="Auxiliary">Auxiliary</option>
									<option value="Main">Main</option>
									<option value="Heavy">Heavy</option>
									<option value="Superheavy">Superheavy</option>
									{{/select}}
								</select>
							</label>
						</div>
						<div class="field">
							<label>
								TYPE
								<select name="system.type">
									{{#select item.system.type}}
									<option value="Melee">Melee</option>
									<option value="CQB">CQB</option>
									<option value="Rifle">Rifle</option>
									<option value="Launcher">Launcher</option>
									<option value="Cannon">Cannon</option>
									<option value="Nexus">Nexus</option>
									<option value="Archaic Melee">Archaic Melee</option>
									<option value="Archaic Ranged">Archaic Ranged</option>
									<option value="Light A/C">Light A/C</option>
									<option value="Medium A/C">Medium A/C</option>
									<option value="Heavy A/C">Heavy A/C</option>
									<option value="Light Signature">Light Signature</option>
									<option value="Medium Signature">Medium Signature</option>
									<option value="Heavy Signature">Heavy Signature</option>
									{{/select}}
								</select>
							</label>
						</div>
						<div class="field">
							<label>
								DESTROYED
							</label>
							<div class="input-container">
								<input type="checkbox" name="system.destroyed" {{checked item.system.destroyed}}>
							</div>
						</div>
					</div>
					<!-- Limited -->
					<div class="flexrow">
						<div class="field no-grow pad-right --more">
							<label>LIMITED</label>
							<div class="input-container">
								<input type="checkbox" name="system.limited.isLimited" {{checked item.system.limited.isLimited}}>
							</div>
						</div>
						{{#if item.system.limited.isLimited}}
						<div class="field">
							<label>LIMIT</label>
							<div class="flexrow input-container">
								<input type="text" class="--small" name="system.limited.value" value="{{item.system.limited.value}}" data-dType="Number">
								&nbsp;/&nbsp;
								<input type="text" class="--small" name="system.limited.max" value="{{item.system.limited.max}}" data-dType="Number">
							</div>
						</div>
						{{/if}}
					</div>
					<!-- Tags -->
					<div class="flexrow">
						<div class="flex2 field">
							<label>
								TAGS
								<input type="text" name="system.tags" value="{{item.system.tags}}">
							</label>
						</div>
					</div>
				</div>
			</div>
			<div class="flexrow">
				<!-- Description -->
				<div class="field description">
					<label>DESCRIPTION</label>
					{{editor item.system.description target="system.description" button=true}}
				</div>
			</div>
		</div>
	</form>
</div>