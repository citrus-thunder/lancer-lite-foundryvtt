<div class="{{cssClass}} flexcol sheet-container item-sheet trigger-sheet">
	<form autocomplete="off">
		<header class="sheet-header">
			<h1>TRIGGER</h1>
			<div class="icon-button-container">
				<i class="fa-solid fa-ban item-delete icon-button" title="Delete Trigger" data-item-id="{{id}}"></i>
			</div>
		</header>
		<div class="flexcol">
			<!-- Row 1 -->
			<div class="flexrow">
				<!-- Portrait -->
				<div class="flexcol flex0 pad-right">
					<div class="portrait-frame --square">
						<img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64" />
					</div>
				</div>
				<div class="flexcol field-group">
					<!-- Name -->
					<div class="flexrow field-group">
						<div class="field">
							<label>
								NAME
								<input type="text" name="name" value="{{item.name}}">
							</label>
						</div>
						<div class="field">
							<label>
								BONUS
								<select name="system.bonus">
									{{#select item.system.bonus}}
									<option value="2">+2</option>
									<option value="4">+4</option>
									<option value="6">+6</option>
									{{/select}}
								</select>
							</label>
						</div>
					</div>
				</div>
			</div>
			<!-- Row 2: Description -->
			<div class="flexrow">
				<!-- Description -->
				<div class="field description">
					<label>DESCRIPTION</label>
					{{editor item.system.description target="system.description" button=true}}
				</div>
			</div>
		</div>
	</form>
</div>