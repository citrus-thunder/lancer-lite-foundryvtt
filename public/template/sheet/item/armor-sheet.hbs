<div class="{{cssClass}} flexcol sheet-container item-sheet armor-sheet">
	<form autocomplete="off">
		<header class="sheet-header">
			<h1>ARMOR</h1>
			<div class="icon-button-container">
				<i class="fa-solid fa-ban item-delete icon-button" title="Delete Armor" data-item-id="{{id}}"></i>
			</div>
		</header>
		<div class="flexcol">
			<!-- Row 1 -->
			<div class="flexrow">
				<!-- Portrait -->
				<div class="flexcol flex0 padright">
					<div class="portrait-frame --square">
						<img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64" />
					</div>
				</div>
				<div class="flexcol field-group">
					<div class="flexrow">
						<div class="flexcol">
							<!-- Name -->
							<div class="field">
								<label>
									NAME
									<input type="text" name="name" value="{{item.name}}">
								</label>
							</div>
							<div class="field">
								<label>
									BONUSES
									<input type="text" name="system.bonuses" value="{{item.system.bonuses}}">
								</label>
							</div>
							<div class="field">
								<label>
									TAGS
									<input type="text" name="system.tags" value="{{item.system.tags}}">
								</label>
							</div>
						</div>
						<div class="flexcol">
							<div class="field">
								<label>
									ARMOR
									<input type="text" name="system.armor" value="{{item.system.armor}}" data-dType="Number">
								</label>
							</div>
							<div class="field">
								<label>
									EVASION
									<input type="text" name="system.evasion" value="{{item.system.evasion}}" data-dType="Number">
								</label>
							</div>
							<div class="field">
								<label>
									E-DEFENSE
									<input type="text" name="system.e_defense" value="{{item.system.e_defense}}" data-dType="Number">
								</label>
							</div>
							<div class="field">
								<label>
									SPEED
									<input type="text" name="system.speed" value="{{item.system.speed}}" data-dType="Number">
								</label>
							</div>
						</div>
					</div>
				</div>
			</div>
			<!-- Row 2: Description -->
			<div class="flexrow">
				<!-- Description -->
				<div class="field description">
					<label>DESCRIPTION</label>
					{{editor item.system.description target="system.description" button=true}}
				</div>
			</div>
		</div>
	</form>
</div>