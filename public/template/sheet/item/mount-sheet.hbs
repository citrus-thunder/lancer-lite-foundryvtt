<div class="{{cssClass}} flexcol sheet-container item-sheet mount-sheet">
	<form autocomplete="off">
		<header class="sheet-header">
			<h1>MOUNT</h1>
			<div class="icon-button-container">
				<i class="fa-solid fa-ban item-delete icon-button" title="Delete Mount" data-item-id="{{id}}"></i>
			</div>
		</header>
		<div class="flexcol">
			<!-- Row 1 -->
			<div class="flexrow">
				<!-- Portrait -->
				<div class="flexcol flex0 pad-right">
					<div class="portrait-frame --square">
						<img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64" />
					</div>
				</div>
				<div class="flexcol field-group">
					<div class="field">
						<label>
							TYPE
							<select name="system.type">
								{{#select item.system.type}}
									<option value="aux">Aux</option>
									<option value="aux_aux">Aux/Aux</option>
									<option value="flex">Flexible</option>
									<option value="main">Main</option>
									<option value="main_aux">Main/Aux</option>
									<option value="heavy">Heavy</option>
									<option value="integrated">Integrated</option>
								{{/select}}
							</select>
						</label>
					</div>
				</div>
			</div>
		</div>
	</form>
</div>