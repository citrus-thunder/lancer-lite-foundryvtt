<div class="{{cssClass}} flexcol sheet-container item-sheet reaction-sheet">
	<form autocomplete="off">
		<header class="sheet-header">
			<h1>REACTION</h1>
			<div class="icon-button-container">
				<i class="fa-solid fa-ban item-delete icon-button" title="Delete Rection" data-item-id="{{id}}"></i>
			</div>
		</header>
		<div class="flexcol">
			<!-- Row 1 -->
			<div class="flexrow">
				<!-- Portrait -->
				<div class="flexcol flex0 pad-right">
					<div class="portrait-frame --square">
						<img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64" />
					</div>
				</div>
				<div class="flexcol field-group">
					<!-- Name -->
					<div class="field">
						<label>
							NAME
							<input type="text" name="name" value="{{item.name}}">
						</label>
					</div>
					<div class="field">
						<label>
							FREQUENCY
							<input type="text" name="system.frequency" value="{{item.system.frequency}}">
						</label>
					</div>
					<div class="field">
						<label>
							TAGS
							<input type="text" name="system.tags" value="{{item.system.tags}}">
						</label>
					</div>
				</div>
			</div>
			<!-- Row 2: Description -->
			<div class="flexrow">
				<!-- Description -->
				<div class="field description">
					<label>DESCRIPTION</label>
					{{editor item.system.description target="system.description" button=true}}
				</div>
			</div>
		</div>
	</form>
</div>