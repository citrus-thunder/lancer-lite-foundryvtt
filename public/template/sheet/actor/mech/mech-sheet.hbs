<div class="{{cssClass}} flexcol sheet-container">
	<form autocomplete="off">
		<header class="sheet-header">
			<h1>MECH</h1>
		</header>
		<div class="flexcol">
			<!-- Row 1: Portrait & Bio -->
			<div class="flexrow pad-bottom --more">
				<div class="flexcol flex2">
					<div class="flexrow">
						<!-- Portrait -->
						<div class="flexcol flex0 pad-right">
							<div class="pilot-portrait-frame">
								<img src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="64" width="64" />
							</div>
						</div>
						<!-- Bio -->
						<div class="flexcol flex0 field-group mech-bio pad-right --more">
							<h2 class="section-title">Bio</h2>
							<div class="field">
								<label>
									NAME
									<input name="name" type="text" value="{{actor.name}}">
								</label>
							</div>
							<div class="flexrow field-group">
								<div class="field">
									<label>
										FRAME
										<input name="system.frame" type="text" value="{{actor.system.frame}}">
									</label>
								</div>
								<div class="field no-grow">
									<label>
										SIZE <br>
										<input name="system.size" class="--small" type="text" value="{{actor.system.size}}" data-dType="Number">
									</label>
								</div>
							</div>
							<div class="field">
								<label>
									BIOGRAPHY
									<textarea name="system.biography">{{actor.system.biography}}</textarea>
								</label>
							</div>
						</div>
						<div class="flexcol flex0 field-group pilot-skills pad-right --more">
							<h2 class="section-title">Skills</h2>
							<div class="flexrow">
								<div class="pad-right --more">
									<label>
										LL
									</label>
									<input type="text" name="system.license_level" value="{{actor.system.license_level}}"
										data-dtype="Number">
								</div>
								<div>
									<label>
										GRIT
									</label>
									<input type="text" name="system.grit" value="{{actor.system.grit}}" data-dtype="Number">
								</div>
							</div>
							<div class="flexrow">
								<div class="pad-right --more">
									<label>
										<i class="fas fa-dice-d20 icon-button stat-roll" data-stat="hull" data-stat-label="Hull"></i>
										HULL
									</label>
									<input type="text" name="system.hull" value="{{actor.system.hull}}" data-dtype="Number">
								</div>
								<div>
									<label>
										<i class="fas fa-dice-d20 icon-button stat-roll" data-stat="systems" data-stat-label="Systems"></i>
										SYS
									</label>
									<input type="text" name="system.systems" value="{{actor.system.systems}}" data-dtype="Number">
								</div>
							</div>
							<div class="flexrow">
								<div class="pad-right --more">
									<label class="pad-right --more">
										<i class="fas fa-dice-d20 icon-button stat-roll" data-stat="agility" data-stat-label="Agility"></i>
										AGI
									</label>
									<input type="text" name="system.agility" value="{{actor.system.agility}}" data-dtype="Number">
								</div>
								<div>
									<label>
										<i class="fas fa-dice-d20 icon-button stat-roll" data-stat="engineering"
											data-stat-label="Engineering"></i>
										ENG
									</label>
									<input type="text" name="system.engineering" value="{{actor.system.engineering}}" data-dtype="Number">
								</div>
							</div>
							<div class="flexrow pad-top --more">
								<button class="skill-check quick-button">
									<i class="fas fa-dice-d20"></i>
									Skill Check
								</button>
							</div>
						</div>
						<div class="flexcol field-group pilot-stats">
							<h2 class="section-title">Vitals</h2>
							<!-- TODO: To Table -->
							<div class="flexrow resource-row">
								<div class="resource-field">
									<label>STRUCTURE</label>
									<div class="resources">
										<input type="text" name="system.structure.value" value="{{actor.system.structure.value}}"
											data-dtype="Number">
										&nbsp;/&nbsp;
										<input type="text" name="system.structure.max" value="{{actor.system.structure.max}}"
											data-dtype="Number">
									</div>
								</div>
								<div class="resource-field">
									<label>HP</label>
									<div class="resources">
										<input type="text" name="system.hp.value" value="{{actor.system.hp.value}}" data-dtype="Number">
										&nbsp;/&nbsp;
										<input type="text" name="system.hp.max" value="{{actor.system.hp.max}}" data-dtype="Number">
									</div>
								</div>
							</div>
							<div class="flexrow resource-row" <div class="flexrow">
								<div class="resource-field">
									<label>HEAT</label>
									<div class="flexrow flex0 resources">
										<input type="text" class="--small" name="system.heat.value" value="{{actor.system.heat.value}}"
											data-dtype="Number">
										&nbsp;/&nbsp;
										<input type="text" class="--small" name="system.heat.max" value="{{actor.system.heat.max}}"
											data-dtype="Number">
									</div>
								</div>
								<div class="resource-field">
									<label>STRESS</label>
									<div class="flexrow flex0 resources">
										<input type="text" class="--small" name="system.stress.value" value="{{actor.system.stress.value}}"
											data-dtype="Number">
										&nbsp;/&nbsp;
										<input type="text" class="--small" name="system.stress.max" value="{{actor.system.stress.max}}"
											data-dtype="Number">
									</div>
								</div>
							</div>
							<div class="flexrow resource-row">
								<div class="resource-field no-grow">
									<label style="font-size: 0.73rem">OVERSHIELD</label>
									<div class="flexrow flex0 resources">
										<input type="text" class="--small" name="system.overshield.value"
											value="{{actor.system.overshield.value}}" data-dtype="Number">
										&nbsp;/&nbsp;
										<input type="text" class="--small" name="system.overshield.max"
											value="{{actor.system.overshield.max}}" data-dtype="Number">
									</div>
								</div>
								<div class="resource-field no-grow">
									<label >REPAIR</label>
									<div class="flexrow flex0 resources">
										<input type="text" class="--small" name="system.repair.value"
											value="{{actor.system.repair.value}}" data-dtype="Number">
										&nbsp;/&nbsp;
										<input type="text" class="--small" name="system.repair.max"
											value="{{actor.system.repair.max}}" data-dtype="Number">
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<!-- Row 2: Tabs -->
			<div class="flexrow pad-bottom --more">
				<nav class="tabs" data-group="primary-tabs">
					<a class="item" data-tab="traits" data-group="primary-tabs">TRAITS</a>
					<a class="item" data-tab="loadout" data-group="primary-tabs">LOADOUT</a>
					<a class="item" data-tab="gear" data-group="primary-tabs">GEAR</a>
				</nav>
			</div>
			<!-- Row 3: Content -->
			<div class="flexrow tab-content">
				<section class="content">
					<div class="tab" data-tab="traits" data-group="primary-tabs">
						{{> "systems/lancer-lite/template/sheet/actor/mech/tab/mech-traits-tab.hbs"}}
					</div>
					<div class="tab" data-tab="loadout" data-group="primary-tabs">
						{{> "systems/lancer-lite/template/sheet/actor/mech/tab/mech-loadout-tab.hbs"}}
					</div>
					<div class="tab" data-tab="gear" data-group="primary-tabs">
						{{> "systems/lancer-lite/template/sheet/actor/mech/tab/mech-gear-tab.hbs"}}
					</div>
				</section>
			</div>
		</div>
	</form>
</div>