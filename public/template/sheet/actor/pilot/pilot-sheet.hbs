<div class="{{cssClass}} flexcol sheet-container pilot-sheet">
	<form autocomplete="off">
		<header class="sheet-header">
			<h1>PILOT</h1>
		</header>
		<div class="flexcol">
			<!-- Row 1: Portrait & Bio -->
			<div class="flexrow pad-bottom --more">
				<div class="flexcol flex2">
					<div class="flexrow">
						<!-- Portrait -->
						<div class="flexcol flex0 pad-right">
							<div class="portrait-frame">
								<img src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="64" width="64" />
							</div>
						</div>
						<!-- Bio -->
						<div class="flexcol flex0 field-group bio pad-right --more">
							<h2 class="section-title">Bio</h2>
							<div class="field">
								<label>
									NAME
									<input name="name" type="text" value="{{actor.name}}">
								</label>
							</div>
							<div class="field">
								<label>
									CALLSIGN
									<input name="system.callsign" type="text" value="{{actor.system.callsign}}">
								</label>
							</div>
							<div class="field">
								<label>
									BACKGROUND
									<textarea name="system.background">{{actor.system.background}}</textarea>
								</label>
							</div>
						</div>
						<div class="flexcol flex0 field-group skills pad-right --more">
							<h2 class="section-title">Skills</h2>
							<div class="flexrow">
								<div class="pad-right --more">
									<label>
										LL
									</label>
									<input type="text" name="system.license_level" value="{{actor.system.license_level}}"
										data-dtype="Number">
								</div>
								<div>
									<label>
										GRIT
									</label>
									<input type="text" name="system.stats.grit" value="{{actor.system.stats.grit}}" data-dtype="Number">
								</div>
							</div>
							<div class="flexrow">
								<div class="pad-right --more">
									<label>
										<i class="fas fa-dice-d20 icon-button stat-roll" data-stat="hull" data-stat-label="Hull"></i>
										HULL
									</label>
									<input type="text" name="system.stats.hull" value="{{actor.system.stats.hull}}" data-dtype="Number">
								</div>
								<div>
									<label>
										<i class="fas fa-dice-d20 icon-button stat-roll" data-stat="systems" data-stat-label="Systems"></i>
										SYS
									</label>
									<input type="text" name="system.stats.systems" value="{{actor.system.stats.systems}}" data-dtype="Number">
								</div>
							</div>
							<div class="flexrow">
								<div class="pad-right --more">
									<label class="pad-right --more">
										<i class="fas fa-dice-d20 icon-button stat-roll" data-stat="agility" data-stat-label="Agility"></i>
										AGI
									</label>
									<input type="text" name="system.stats.agility" value="{{actor.system.stats.agility}}" data-dtype="Number">
								</div>
								<div>
									<label>
										<i class="fas fa-dice-d20 icon-button stat-roll" data-stat="engineering"
											data-stat-label="Engineering"></i>
										ENG
									</label>
									<input type="text" name="system.stats.engineering" value="{{actor.system.stats.engineering}}" data-dtype="Number">
								</div>
							</div>
							<div class="flexrow pad-top --more">
								<button class="skill-check quick-button">
									<i class="fas fa-dice-d20"></i>
									Skill Check
								</button>
							</div>
						</div>
						<div class="flexcol field-group stats">
							<h2 class="section-title">Stats</h2>
							<div class="flexrow">
								<label>
									HP
									<div class="flexrow flex0">
										<input type="text" name="system.hp.value" value="{{actor.system.hp.value}}" data-dtype="Number">
										&nbsp;/&nbsp;
										<input type="text" name="system.hp.max" value="{{actor.system.hp.max}}" data-dtype="Number">
									</div>
								</label>
							</div>
							<div class="flexrow">
								<label>
									ARMOR
									<input type="text" name="system.stats.armor" value="{{actor.system.stats.armor}}" data-dtype="Number">
								</label>
							</div>
							<div class="flexrow">
								<label>
									E-DEF
									<input type="text" name="system.stats.e_defense" value="{{actor.system.stats.e_defense}}" data-dtype="Number">
								</label>
							</div>
							<div class="flexrow">
								<label>
									EVASION
									<input type="text" name="system.stats.evasion" value="{{actor.system.stats.evasion}}" data-dtype="Number">
								</label>
							</div>
							<div class="flexrow">
								<label>
									SPEED
									<input type="text" name="system.stats.speed" value="{{actor.system.stats.speed}}" data-dtype="Number">
								</label>
							</div>
						</div>
					</div>
				</div>
			</div>
			<!-- Row 2: Tabs -->
			<div class="flexrow pad-bottom --more">
				<nav class="tabs" data-group="primary-tabs">
					<a class="item" data-tab="traits" data-group="primary-tabs">TRAITS</a>
					<a class="item" data-tab="licenses" data-group="primary-tabs">LICENSES</a>
					<a class="item" data-tab="loadout" data-group="primary-tabs">LOADOUT</a>
					<a class="item" data-tab="about" data-group="primary-tabs">ABOUT</a>
				</nav>
			</div>
			<!-- Row 3: Content -->
			<div class="flexrow tab-content">
				<section class="content">
					<div class="tab" data-tab="traits" data-group="primary-tabs">
						{{> "systems/lancer-lite/template/sheet/actor/pilot/tab/pilot-traits-tab.hbs"}}
					</div>
					<div class="tab" data-tab="licenses" data-group="primary-tabs">
						{{> "systems/lancer-lite/template/sheet/actor/pilot/tab/pilot-licenses-tab.hbs"}}
					</div>
					<div class="tab" data-tab="loadout" data-group="primary-tabs">
						{{> "systems/lancer-lite/template/sheet/actor/pilot/tab/pilot-loadout-tab.hbs"}}
					</div>
					<div class="tab" data-tab="about" data-group="primary-tabs">
						{{> "systems/lancer-lite/template/sheet/actor/pilot/tab/pilot-about-tab.hbs"}}
					</div>
				</section>
			</div>
		</div>
	</form>
</div>