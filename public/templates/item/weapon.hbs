<form class="{{cssClass}}" autocomplete="off">
	<header class="sheet-header {{styles.sheet-header}}">
		<img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64" />
		<h1><input name="name" type="text" value="{{item.name}}" placeholder="Name" /></h1>
		<div class="{{styles.icon-button-container}}">
			<i class="fa-solid fa-ban weapon-delete {{styles.button-icon}}" title="Delete Weapon" data-item-id="{{id}}"></i>
		</div>
	</header>
	<div>
		<label>
			Range
			<input type="text" name="system.range" value="{{item.system.range}}">
		</label>
		<label>
			Damage
			<input type="text" name="system.damage.value" value="{{item.system.damage.value}}">
		</label>
		<label>
			Damage Type
			<input type="text" name="system.damage.type" value="{{item.system.damage.type}}">
		</label>
		<label>
			Tags
			<input type="text" name="system.tags" value="{{item.system.tags}}">
		</label>
		<label>
			Description
			{{editor item.system.description target="system.description"}}
		</label>
	</div>
</form>